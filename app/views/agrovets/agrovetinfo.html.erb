 <h5><%= current_user.firstname %></h5>
<h3><%= @agrovet.name %></h3>
<p><strong>Owner's Phone: </strong><%= @agrovet.owner_phone%></p>
<p><strong>Owner's Name </strong><%= @agrovet.owner_name%></p>
<p><strong>Location: </strong><%= @agrovet.location%></p>

<% if @latest_data_entry.present? %>
  <!-- Display information from the latest form entry here -->
  <!-- Example: -->
  <p><strong>Entry Date:</strong> <%= @latest_data_entry.created_at.strftime("%d-%m-%Y at %H:%M:%S") %></p>
  <table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @products.first.name %></td>
            <td><%= @latest_data_entry.product_1_quantity %></td>
            <td><%= @products.first.price * @latest_data_entry.product_1_quantity %></td>
        </tr>
        <tr>
            <td><%= @products.second.name %></td>
            <td><%= @latest_data_entry.product_2_quantity %></td>
            <td><%= @products.second.price * @latest_data_entry.product_2_quantity %></td>
        </tr>
        <tr>
            <td><%= @products.third.name %></td>
            <td><%= @latest_data_entry.product_3_quantity %></td>
            <td><%= @products.third.price * @latest_data_entry.product_3_quantity %></td>
        </tr>
        <tr>
            <td><%= @products.fourth.name %></td>
            <td><%= @latest_data_entry.product_4_quantity %></td>
            <td><%= @products.fourth.price * @latest_data_entry.product_4_quantity %></td>
        </tr>
    </tbody>
</table><br>
  <p><strong>Total Amount:</strong> <%=(@products.first.price * @latest_data_entry.product_1_quantity) + (@products.second.price * @latest_data_entry.product_2_quantity) + 
  (@products.third.price * @latest_data_entry.product_3_quantity) + (@products.fourth.price * @latest_data_entry.product_4_quantity) %></p>
  <p><strong>Money Paid Today:</strong> Ksh.<%= @latest_data_entry.money_paid %></p>
  <p><strong>Money Owed Today:</strong> Ksh.<%= @latest_data_entry.money_owed %></p>
  <%= link_to "Update Agrovet Info", new_data_entry_path(agrovet_id: @agrovet.id), class: "btn btn-success" %>
  <!-- Add more information from the form entry as needed -->
<% else %>
  <p>No form entries available for this agrovet.</p>
  <%= link_to "Create Form Entry", new_data_entry_path(agrovet_id: @agrovet.id), class: "btn btn-success" %>
<% end %>

